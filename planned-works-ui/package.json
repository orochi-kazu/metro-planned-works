{
  "name": "planned-works-ui",
  "version": "0.1.0",
  "private": false,
  "license": "AGPL-3.0-or-later",
  "homepage":"https://orochi-kazu.github.io/metro-planned-works",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false && npm run lint",
    "test:watch": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "commit": "npx git-cz",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "standard": {
    "global": [
      "fetch",
      "describe",
      "it",
      "expect"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "standard": "^12.0.1"
  }
}
